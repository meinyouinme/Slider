.slider
  position relative
  width 980px
  height 380px
  overflow hidden
  .slider-wrapper
    position absolute
    left 0
    top 0
    height 380px
    z-index 2
    font-size 0
    li
      width 980px
      height 380px
      display inline-block
      img
        width 100%
        height 380px
  .slider-dots
    font-size 0
    text-align center
    position absolute
    left 0
    bottom 10px
    width 100%
    z-index 3
    li
      display inline-block
      width 8px
      height 8px
      border-radius 50%
      background rgba(255,255,255,.4)
      margin-right 10px
      cursor pointer
      &.on
        background white
      &:last-child
        margin-right 0
  .slider-btn
    position absolute
    width 50px
    height 50px
    border-radius 50%
    background black
    opacity .5
    top 50%
    transform translateY(-50%)
    z-index 3
    cursor pointer
    font-size 40px
    color #999
    text-align center
    transition all .3s
    &.btn-prev
      left 20px
    &.btn-next
      right 20px
    &:hover
      opacity .6